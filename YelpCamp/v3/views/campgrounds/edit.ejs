<%include ../partials/header%>
<h1 style="text-align:center">Edit <%=campground.name%></h1>
    <div class="row">
        <div style="width:30%;margin:20px auto;">
            <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
                <div class="form-group">
                        <input type="text" value="<%=campground.name%>" name="campground[name]" class="form-control">
                </div>

                <div class="form-group">
                    <input type="text" value="<%=campground.image%>" name="campground[image]" class="form-control">
                </div>

                <div class="form-group">
                    <input type="text" value="<%=campground.description%>" name="campground[description]" class="form-control">
                 </div>

                <div class="form-group">
                        <button class="btn btn-primary btn-lg btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back!</a>
        </div>
    </div>
<%include ../partials/footer%>
